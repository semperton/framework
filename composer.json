{
    "name": "semperton/framework",
    "description": "The Semperton Framework.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": false
    },
    "scripts": {
        "test": "phpunit tests",
		"check": "psalm"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7"
    },
    "require": {
        "httpsoft/http-message": "^1.0",
        "httpsoft/http-server-request": "^1.0",
        "semperton/container": "^2.2",
        "semperton/porter": "@dev",
        "semperton/routing": "^1.0"
    }
}
